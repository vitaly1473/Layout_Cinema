@* 2 вариант вид сеансов в таблице *@
<table class="schedule-table">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Date</th>
            <th>Time</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Schedule.Count; i++)
        {
            var session = Model.Schedule[i];
            <tr>
                <td>
                    <a href="/ScheduleDetails/@session.Id_">@session.Name_</a>
                </td>
                <td>@session.Date_.ToString("dd.MM.yyyy")</td>
                <td>@session.Time_.ToString("HH:mm")</td>
                <td>@session.Price_</td>
            </tr>
        }
    </tbody>
</table>


